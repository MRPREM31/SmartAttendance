<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEF2FF"
    android:fitsSystemWindows="true">

    <!-- ðŸ”· TOOLBAR -->
    <include layout="@layout/toolbar_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ðŸ•’ DATE & TIME -->
            <TextView
                android:id="@+id/txtDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date And Time"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#37474F"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ‘¨â€ðŸ« PROFILE IMAGE -->
            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                app:cardCornerRadius="55dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/teacher_logo"
                    android:scaleType="centerCrop"
                    android:background="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <!-- ðŸ‘‹ GREETING -->
            <TextView
                android:id="@+id/txtGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi Teacher ðŸ‘‹"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- ðŸ”˜ ACTION BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnUploadImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Image"
                    android:textAllCaps="false"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/btnEditSubjects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Subjects"
                    android:textAllCaps="false" />
            </LinearLayout>

            <!-- ðŸ“˜ SUBJECT -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Subject"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <Spinner
                android:id="@+id/spinnerSubject"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@android:drawable/btn_dropdown"
                android:backgroundTint="#3F51B5"
                android:layout_marginBottom="16dp" />

            <!-- â° TIME SLOT -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time Slot"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <Spinner
                android:id="@+id/spinnerTime"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@android:drawable/btn_dropdown"
                android:backgroundTint="#3F51B5"
                android:layout_marginBottom="20dp" />

            <!-- â³ COUNTDOWN -->
            <TextView
                android:id="@+id/txtCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session ends in 60 sec"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ”³ GENERATE QR -->
            <Button
                android:id="@+id/btnGenerateQR"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Generate QR"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3F51B5"
                android:layout_marginBottom="20dp" />

            <!-- ðŸ“· QR IMAGE -->
            <androidx.cardview.widget.CardView
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/imgQR"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:background="#E8EBFF" />
            </androidx.cardview.widget.CardView>

            <!-- â„¹ï¸ QR DETAILS -->
            <TextView
                android:id="@+id/txtQRSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject:"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txtQRTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Slot:"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txtQRId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR ID:"
                android:textStyle="bold"
                android:textColor="#37474F"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- ðŸ“Š VIEW ATTENDANCE -->
            <Button
                android:id="@+id/btnViewAttendance"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="View Attendance"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2E7D32"
                android:layout_marginBottom="32dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
