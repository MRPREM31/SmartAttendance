<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:fitsSystemWindows="true">

    <!-- ðŸ”· TOOLBAR -->
    <include layout="@layout/toolbar_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Student"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="16dp"/>


            <!-- INPUT -->
            <EditText
                android:id="@+id/edtStudentQuery"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:hint="Enter Student Email or Name"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_distance_card"
                android:padding="12dp"
                android:textColor="#0D47A1"
                android:textColorHint="#5C6BC0"/>


            <Button
                android:id="@+id/btnFetchStudent"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Fetch Details"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#009688"
                android:layout_marginTop="16dp"/>


            <!-- RESULT CARD -->
            <LinearLayout
                android:id="@+id/layoutResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_distance_card"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"/>

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="15sp"
                    android:layout_marginTop="6dp"
                    android:textColor="#37474F"/>

                <TextView
                    android:id="@+id/txtRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role:"
                    android:textSize="15sp"
                    android:layout_marginTop="6dp"
                    android:textColor="#37474F"/>

                <TextView
                    android:id="@+id/txtUid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UID:"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#1565C0"/>

                <TextView
                    android:id="@+id/txtDeviceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device ID:"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:textColor="#1565C0"/>

                <TextView
                    android:id="@+id/txtCreatedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created At:"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp"
                    android:textColor="#607D8B"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnCopyStudentInfo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ“‹ Copy Student Info"
                android:textAllCaps="false"
                android:backgroundTint="#3F51B5"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp"/>

            <Spinner
                android:id="@+id/spinnerSubjectFilter"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/btn_dropdown"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/layoutAttendanceSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_distance_card"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <!-- ðŸ”´ HEADING -->
                <TextView
                    android:id="@+id/txtAttendanceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Attendance Summary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#C62828" />  <!-- RED -->

                <!-- ðŸ”µ TOTAL CLASSES -->
                <TextView
                    android:id="@+id/txtTotalClasses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Total Classes: --"
                    android:textSize="15sp"
                    android:textColor="#0D47A1" />   <!-- DARK BLUE -->

                <!-- ðŸ”µ PRESENT COUNT -->
                <TextView
                    android:id="@+id/txtPresentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present: --"
                    android:textSize="15sp"
                    android:textColor="#1B5E20" />   <!-- DARK GREEN -->

                <!-- âš« LAST ATTENDANCE -->
                <TextView
                    android:id="@+id/txtLastAttendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Attended: --"
                    android:textSize="14sp"
                    android:textColor="#212121" />   <!-- NEAR BLACK -->

                <!-- ðŸŸ£ ATTENDANCE PERCENTAGE -->
                <TextView
                    android:id="@+id/txtAttendancePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance: --%"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#6A1B9A"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
