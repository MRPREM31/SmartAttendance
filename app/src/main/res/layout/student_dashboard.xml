<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#FAFAFA">

    <!-- ðŸ”· TOOLBAR -->
    <include layout="@layout/toolbar_main"/>

    <!-- ðŸ”· CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- ðŸ‘‹ WELCOME -->
            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi Student ðŸ‘‹"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A237E"/>

            <TextView
                android:id="@+id/txtSubWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to NIST Attendance System"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="20dp"/>

            <!-- ðŸ‘¤ PROFILE CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/bg_distance_card"
                android:layout_marginBottom="24dp">

                <!-- ROUND IMAGE -->
                <ImageView
                    android:id="@+id/imgStudentProfile"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/student_logo"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"
                    android:clipToOutline="true"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnUploadStudentImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Photo"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <!-- TITLE -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_distance_card"
                android:padding="16dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/txtPermCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera Permission: checking..."
                    android:textSize="14sp"
                    android:textColor="#37474F"/>

                <TextView
                    android:id="@+id/txtPermLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location Permission: checking..."
                    android:textSize="14sp"
                    android:textColor="#37474F"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/txtPermInternet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Internet Permission: checking..."
                    android:textSize="14sp"
                    android:textColor="#37474F"
                    android:layout_marginTop="6dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtLatLng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lat: -- , Lng: --"
                android:textSize="13sp"
                android:textColor="#455A64"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnRefreshLocation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ“ Refresh Location"
                android:textAllCaps="false"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <!-- SCAN BUTTON -->
            <Button
                android:id="@+id/btnScanQR"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Scan QR for Attendance"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="#3F51B5"
                android:layout_marginBottom="16dp"/>

            <!-- ðŸ“ DISTANCE CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/bg_distance_card"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance from Teacher"
                        android:textSize="12sp"
                        android:textColor="#607D8B"/>

                    <TextView
                        android:id="@+id/txtDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- m"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A237E"/>

                </LinearLayout>
            </LinearLayout>

            <!-- REPORT BUTTON -->
            <Button
                android:id="@+id/btnViewReport"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="View Attendance Report"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="#009688"
                android:layout_marginBottom="24dp"/>

            <!-- LIVE DATE TIME -->
            <TextView
                android:id="@+id/txtDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading time..."
                android:textSize="14sp"
                android:textColor="#37474F"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
