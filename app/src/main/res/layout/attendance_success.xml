<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- ðŸ”· NAVBAR -->
    <include layout="@layout/toolbar_main"/>

    <!-- ðŸ”· PAGE CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- âœ… Success Icon -->
        <ImageView
            android:id="@+id/imgSuccess"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/success"
            android:contentDescription="Attendance Success"
            android:layout_marginBottom="12dp"
            android:animation="@anim/success_anim" />

        <!-- ðŸ•’ BIG TIME -->
        <TextClock
            android:id="@+id/txtBigTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="hh:mm a"
            android:format24Hour="HH:mm"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginBottom="4dp"
            android:animation="@anim/success_anim" />

        <!-- ðŸ“… DATE -->
        <TextClock
            android:id="@+id/txtBigDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="EEEE, dd MMM yyyy"
            android:textSize="14sp"
            android:textColor="#3F51B5"
            android:alpha="0.9"
            android:layout_marginBottom="24dp"
            android:animation="@anim/success_anim" />

        <!-- âœ… Success Message -->
        <TextView
            android:text="Attendance Marked Successfully!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animation="@anim/success_anim" />

        <!-- ðŸŒŸ Happy Learning Message -->
        <TextView
            android:text="Happy learning! Stay focused and make the most of your class."
            android:textSize="14sp"
            android:textColor="#555555"
            android:textAlignment="center"
            android:layout_marginBottom="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animation="@anim/success_anim" />

        <!-- Done Button -->
        <Button
            android:id="@+id/btnDone"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#3F51B5"
            android:layout_width="200dp"
            android:layout_height="52dp"
            android:elevation="6dp" />

    </LinearLayout>

</LinearLayout>
