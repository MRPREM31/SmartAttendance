<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ===============================
         Base App Theme
         =============================== -->
    <style name="Theme.SmartAttendance"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- ðŸ”¹ Disable default ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- ðŸ”¹ Prevent toolbar overlap with status bar -->
        <item name="android:fitsSystemWindows">true</item>

        <!-- ðŸ”¹ Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- ðŸ”¹ Primary Colors -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#303F9F</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- ðŸ”¹ Secondary Colors -->
        <item name="colorSecondary">#FF9800</item>
        <item name="colorSecondaryVariant">#F57C00</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- ðŸ”¹ Default background -->
        <item name="android:windowBackground">#FAFAFA</item>

    </style>

</resources>
